/**index.wxss**/
.homepage{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page-base {
  align-items: center;
  height: 100%;
}

.page-header{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center; 
  background-color: rgb(0, 25, 49); 
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  padding-bottom: 20rpx;
}

.cell-padding{
  padding-left: 30rpx;
}

.weui-footer_text-center{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 25rpx;
  padding-bottom: 20rpx;
}